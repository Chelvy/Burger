<div class="container">
	<div class="jumbotron">
		<img src="/01-Activities/Burger/public/assets/img/burger.png" width="auto" height="auto">
		<h1>Eat Burgers!!!</h1>
	</div>
	<div class="row">
		<div class="col-md-4 col-md-offset-1">
			<div class="panel-panel default">
				<h1>Ready to Eat Burger</h1>
				<ul class="list-group">
					{{#each burgers}}
					{{#unless this.devoured}}
					<li class="list-group-item">
					<div class="input-group">
						<p class="lead">{{this.burger_name}}</p>
						<span class="input-group-btn">
							<form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
								<input type="hidden" name="devoured" value="true">
								<button class="eatburger btn btn-default btn-lg" type="submit">Devour it!</button>
							</form>
						</span>
					</div>
					</li>
					{{/unless}}
					{{/each}}
				</ul>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-md-4 col-md-offset-2">
			<h1>Devoured Burgers</h1>
			<div class="panel panel-default">
				<ul class="list-group">
					{{#each burgers}}
					 {{#if this.devoured}}
					 <li class="list-group-item">
					 	<p class="lead">{{this.burger_name}}</p>
					 </li>
					 {{/if}}
					  {{/each}}
				</ul>
			</div>
		</div>
	</div>
	<div class="col-md-10 col-md-offset-1">
		<p class="lead">add burger & click submit</p>
		<form class="create-update-form" action="burgers/create" method="POST">
		 <div class="form-group">
		 	<textarea class="form-control input-lg" type="text" name="burger_name" row="3"></textarea>
		 </div>
		 <button class="create-form btn btn-default btn-lg" type="submit">Submit</button>
		</form>
	</div>
	<div class="col-md-10 col-md-offset-1">
		<p class="lead">remove burger & click submit</p>
		<form class="delete-update-form" action="burgers/create" method="POST">
		 <div class="form-group">
		 	<textarea class="form-control input-lg" type="text" name="burger_name" row="3"></textarea>
		 </div>
		 <button class="trashburger btn btn-default btn-lg" type="submit">Submit</button>
		</form>
	</div>
	<footer class="footer">
            <div class="container">
                <p class="bold"><a href="/api/burgers/">API Burgers Link</a> |
                    <a href="https://github.com/Chelvy/Burger" target="_blank">GitHub Repo</a></p>
            </div>
    </footer>
</div>